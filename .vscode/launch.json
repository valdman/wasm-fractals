    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "restart": true,
            "port": 5858,
            "sourceMaps": true,
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/dist/index.js",
        },
        {
            "name": "Attach to Process",
            "type": "node",
            "request": "attach",
            "restart": true,
            "port": 5858,
            "outFiles": ["${workspaceFolder}/dist/**/*.js"]
        }
    ]
}