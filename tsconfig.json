{
    "ts-node": {
        // these options are overrides used only by ts-node
        "compilerOptions": {
            "module": "commonjs"
        }
    },
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "Node",
        "outDir": "dist",
        "watch": true,
        "jsx": "react",
        "target": "es6",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "wasm/*": ["build_wasm/engines/*"]
        },
        "preserveWatchOutput": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*", "tests/**/*"]
}
